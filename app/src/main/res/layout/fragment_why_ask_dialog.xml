<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainBottomUI.NetworkUI.FoodCollaborationUI.WhyAskDialogFragment">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/whyAskTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/andika"
                android:textStyle="bold"
                android:text="Why You Should Ask for Food Support?"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@android:color/black" />


            <TextView
                android:id="@+id/whyAskContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/andika"
                android:text="Over 1.3 billion tons of food is wasted globally each year. By asking for food support, you play a vital role in reducing this waste and ensuring that surplus food reaches those who need it. Food is a basic right, and your participation helps build a more sustainable and equitable community. Every request contributes to the fight against hunger and food waste. Your courage to ask makes a difference!"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dismissDialogButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                app:cornerRadius="10dp"
                android:text="Got it!" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>